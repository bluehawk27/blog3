<div id="post-show_content" class="skinny-wrapper wrapper-padding">
  <header>
    <h1 id="page-title"><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <p><%= markdown @post.content %></p><br><br>
  </div>

  <hr>

  <div id="share-box">
    <p>Share <%=@post.title%>!</p>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @alv396 - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
  </div>

  <hr>
  <% if user_signed_in? %>
    <div id="admin-links">
      <%= link_to "Edit", edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure that you want to delete this Article?"} %>
    </div>
  <% end %>

  <%= render 'disqus' %>
</div>
