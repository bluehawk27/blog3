<div id="post-show_content" class="skinny-wrapper wrapper-padding">
  <header>
    <h1 id="page-title"><%= @project.title %></h1>
    <hr>
  </header>


  <div id="content">
    <p><%= markdown @project.description %></p>
    <div class="button-wrapper">
      <a href="<%= @project.link %>" class="project-button" target= "_blank"> Visit <%= @project.title %></a>
    </div>
  </div>

  <% if user_signed_in? %>
    <div id="admin-links">
      <%= link_to "Edit", edit_project_path(@project) %>
      <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure that you want to delete this Project?"} %>
    </div>
  <% end %>

  <hr>

</div>
