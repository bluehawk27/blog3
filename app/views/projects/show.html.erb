<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"> <%= @project.created_at.strftime("%A, %B %d") %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <p><%= markdown @project.description %></p>
    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target= "_blank"> Visit <%= @project.title %></a>
    </div>
  </div>

  <hr>
  <div class="button_wrapper">
    <%= link_to "Edit", edit_project_path %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure that you want to delete this Project?"} %>
  </div>
</div>
